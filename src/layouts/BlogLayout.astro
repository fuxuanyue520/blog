---
import BaseLayout from './BaseLayout.astro';
import Sidebar from '../components/Sidebar.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
---

<BaseLayout title={title} description={description}>
  <div class="flex flex-col lg:flex-row min-h-screen">
    <!-- Sidebar (Right on Desktop as per req? Wait, req says "Left: Content, Right: Sidebar") -->
    <!-- Req: "首页采用 左右双栏布局（Desktop）：左侧主栏（内容区）：文章展示 右侧信息栏（固定或弱滚动）：个人信息与功能入口" -->
    
    <!-- Main Content Area -->
    <main class="flex-1 lg:mr-80 w-full min-h-screen">
      <div class="max-w-4xl mx-auto px-4 py-8 lg:px-12 lg:py-12">
        <slot />
      </div>
    </main>

    <!-- Sidebar Component -->
    <Sidebar />
  </div>
</BaseLayout>
