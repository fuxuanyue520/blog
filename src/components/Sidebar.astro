---
import { Github, Mail, Rss, User, Archive, Home } from 'lucide-react';

const navItems = [
  { name: '首页', href: '/', icon: Home },
  { name: '归档', href: '/archive', icon: Archive },
  { name: '关于', href: '/about', icon: User },
];

const socialLinks = [
  { name: 'GitHub', href: 'https://github.com', icon: Github },
  { name: 'Email', href: 'mailto:example@email.com', icon: Mail },
  { name: 'RSS', href: '/rss.xml', icon: Rss },
];
---

<aside class="w-full lg:w-80 lg:fixed lg:right-0 lg:top-0 lg:h-screen bg-dark-800/50 backdrop-blur-sm border-l border-dark-800 p-8 flex flex-col gap-8 overflow-y-auto z-10">
  <div class="text-center lg:text-left">
    <div class="w-24 h-24 mx-auto lg:mx-0 bg-gradient-to-br from-primary-500 to-purple-600 rounded-full mb-6 shadow-lg shadow-primary-500/20 flex items-center justify-center text-4xl font-bold text-white">
      轩
    </div>
    <h1 class="text-2xl font-bold text-white mb-2 tracking-tight">轩仔的博客</h1>
    <p class="text-gray-400 leading-relaxed text-sm">
      全栈开发者 / 终身学习者
      <br />
      记录代码，也记录生活。
    </p>
  </div>

  <nav>
    <ul class="space-y-2">
      {navItems.map((item) => (
        <li>
          <a
            href={item.href}
            class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-300 hover:text-white hover:bg-dark-800 transition-all group"
          >
            <item.icon className="w-5 h-5 text-gray-500 group-hover:text-primary-500 transition-colors" />
            <span class="font-medium">{item.name}</span>
          </a>
        </li>
      ))}
    </ul>
  </nav>

  <div class="mt-auto pt-8 border-t border-dark-800">
    <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-4">Social</h3>
    <div class="flex gap-4 justify-center lg:justify-start">
      {socialLinks.map((link) => (
        <a
          href={link.href}
          target="_blank"
          rel="noopener noreferrer"
          class="p-2 rounded-md text-gray-400 hover:text-white hover:bg-dark-800 transition-colors"
          aria-label={link.name}
        >
          <link.icon className="w-5 h-5" />
        </a>
      ))}
    </div>
  </div>
</aside>
