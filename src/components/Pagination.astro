---
import { Icon } from 'astro-icon/components';

interface Props {
  currentPage: number;
  lastPage: number;
  prevUrl?: string;
  nextUrl?: string;
  baseUrl?: string;
}

const { currentPage, lastPage, prevUrl, nextUrl, baseUrl = '' } = Astro.props;

// Helper to generate page URL
const getPageUrl = (page: number) => {
  if (page === 1) return baseUrl || '/';
  return `${baseUrl}/${page}`;
};

// Generate page numbers to show
const getPageNumbers = () => {
  const pages = [];
  const maxVisible = 5; // Max number of buttons to show

  if (lastPage <= maxVisible) {
    for (let i = 1; i <= lastPage; i++) pages.push(i);
  } else {
    // Always show first, last, current, and surrounding
    if (currentPage <= 3) {
      for (let i = 1; i <= 4; i++) pages.push(i);
      pages.push('...');
      pages.push(lastPage);
    } else if (currentPage >= lastPage - 2) {
      pages.push(1);
      pages.push('...');
      for (let i = lastPage - 3; i <= lastPage; i++) pages.push(i);
    } else {
      pages.push(1);
      pages.push('...');
      pages.push(currentPage - 1);
      pages.push(currentPage);
      pages.push(currentPage + 1);
      pages.push('...');
      pages.push(lastPage);
    }
  }
  return pages;
};

const pageNumbers = getPageNumbers();
---

<nav class="mt-12 flex justify-center items-center gap-2" aria-label="Pagination">
  <!-- Previous Button -->
  {prevUrl ? (
    <a href={prevUrl} class="w-10 h-10 lg:w-12 lg:h-12 flex items-center justify-center rounded-lg bg-dark-800 text-gray-400 hover:text-primary-400 hover:bg-dark-700 transition-colors border border-white/5" aria-label="Previous Page">
      <Icon name="ri:arrow-left-s-line" class="text-xl lg:text-2xl" />
    </a>
  ) : (
    <button disabled class="w-10 h-10 lg:w-12 lg:h-12 flex items-center justify-center rounded-lg bg-dark-800/50 text-gray-600 cursor-not-allowed border border-white/5" aria-hidden="true">
      <Icon name="ri:arrow-left-s-line" class="text-xl lg:text-2xl" />
    </button>
  )}

  <!-- Page Numbers -->
  <div class="hidden md:flex gap-2">
    {pageNumbers.map((num) => (
      num === '...' ? (
        <span class="w-10 h-10 lg:w-12 lg:h-12 flex items-center justify-center text-gray-500 text-lg">...</span>
      ) : (
        <a 
          href={getPageUrl(num as number)} 
          class={`w-10 h-10 lg:w-12 lg:h-12 flex items-center justify-center rounded-lg border transition-all duration-300 font-medium text-base lg:text-lg ${
            currentPage === num 
              ? 'bg-primary-500 border-primary-500 text-white shadow-[0_0_15px_rgba(6,182,212,0.4)]' 
              : 'bg-dark-800 border-white/5 text-gray-400 hover:text-primary-400 hover:bg-dark-700 hover:border-primary-500/30'
          }`}
          aria-current={currentPage === num ? 'page' : undefined}
        >
          {num}
        </a>
      )
    ))}
  </div>

  <!-- Mobile Current Page Indicator (Visible only on small screens) -->
  <div class="md:hidden text-base text-gray-400 font-medium px-2">
    {currentPage} / {lastPage}
  </div>

  <!-- Next Button -->
  {nextUrl ? (
    <a href={nextUrl} class="w-10 h-10 lg:w-12 lg:h-12 flex items-center justify-center rounded-lg bg-dark-800 text-gray-400 hover:text-primary-400 hover:bg-dark-700 transition-colors border border-white/5" aria-label="Next Page">
      <Icon name="ri:arrow-right-s-line" class="text-xl lg:text-2xl" />
    </a>
  ) : (
    <button disabled class="w-10 h-10 lg:w-12 lg:h-12 flex items-center justify-center rounded-lg bg-dark-800/50 text-gray-600 cursor-not-allowed border border-white/5" aria-hidden="true">
      <Icon name="ri:arrow-right-s-line" class="text-xl lg:text-2xl" />
    </button>
  )}
</nav>
