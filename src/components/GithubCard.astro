---
import { Icon } from 'astro-icon/components';

interface Props {
  repo: string;
}

const { repo } = Astro.props;
---

<a href={`https://github.com/${repo}`} target="_blank" class="block my-6 no-underline group">
  <div class="bg-gray-100 dark:bg-dark-950 border border-gray-200 dark:border-white/10 rounded-xl p-4 flex items-center gap-4 hover:border-primary-500/50 transition-colors">
    <div class="w-10 h-10 rounded-full bg-white dark:bg-dark-800 flex items-center justify-center text-gray-700 dark:text-gray-300 shadow-sm border border-gray-200 dark:border-white/5">
        <Icon name="ri:github-fill" class="text-2xl" />
    </div>
    <div class="flex-1 min-w-0">
        <div class="flex items-center gap-2 mb-1">
            <span class="font-bold text-gray-900 dark:text-white truncate">{repo}</span>
            <Icon name="ri:external-link-line" class="text-gray-400 group-hover:text-primary-500 transition-colors" />
        </div>
        <div class="h-2 bg-gray-200 dark:bg-dark-800 rounded-full overflow-hidden w-full max-w-[200px]">
             <div class="h-full bg-primary-500/50 w-2/3"></div>
        </div>
    </div>
  </div>
</a>
